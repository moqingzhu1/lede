
config samba
	option name 'OpenWrt'
	option workgroup 'WORKGROUP'
	option description 'OpenWrt'
	option autoshare '1'
	option homes '0'

config sambashare
	option auto '1'
	option name 'sda3'
	option path '/mnt/sda3'
	option read_only 'no'
	option create_mask '0666'
	option dir_mask '0777'
	option device 'sda3'
	option browseable 'no'
	option guest_ok 'no'

config sambashare
	option auto '1'
	option name 'sda1'
	option path '/mnt/sda1'
	option read_only 'no'
	option guest_ok 'yes'
	option dir_mask '0777'
	option device 'sda1'
	option browseable 'yes'
	option create_mask '0777'

